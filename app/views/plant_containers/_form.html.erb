  <% if plant_container.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(plant_container.errors.count, "error") %> prohibited this plant_container from being saved:</h2>

      <ul>
        <% plant_container.errors.each do |error| %>
          <li><%= error.full_message %></li>
